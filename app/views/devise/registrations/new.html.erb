<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Sign up</h1>
  </div>
  <div class="panel-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <strong>First </strong><%= f.label :name %>
        <%= f.text_field :name, class: "form-control", :autofocus => true %>
        <p class="help-block">Add a last initial if you've got one of the popular names. This is how your name appears on the list if you're staying past 5:30.</p>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <p class="help-block">(<%= @minimum_password_length %> characters minimum)</p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
